{
  "name": "Enervent EDA Modbus Bridge",
  "version": "1.0.0",
  "slug": "hassos_eda_modbus_bridge",
  "description": "An HTTP/MQTT bridge for Enervent ventilation units with EDA automation",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "url": "https://github.com/Jalle19/eda-modbus-bridge",
  "startup": "services",
  "boot": "auto",
  "privileged": [
    "SYS_MODULE",
    "SYS_RAWIO"
  ],
  "uart": true,
  "options": {
    "modbus": {
      "device": "/dev/ttyUSB0",
      "slave": 1
    },
    "mqtt": {
      "server": "",
      "port": 1883,
      "username": "",
      "password": "",
      "publish_interval": 10
    }
  },
  "schema": {
    "modbus": {
      "device": "str",
      "slave": "int?"
    },
    "mqtt": {
      "server": "str?",
      "port": "int?",
      "username": "str?",
      "password": "str?",
      "publish_interval": "int?"
    }
  },
  "ports": {
    "8080/tcp": 9090
  },
  "ports_description": {
    "8080/tcp": "The HTTP listening port"
  }
}
